[user]
    email = jussiava@gmail.com
    name = Jussi Vaihia

[includeIf "gitdir:/Users/jvai/dias/**"]
  path = /Users/jvai/dotfiles/.gitconfig_dias

[color]
    diff = auto
    status = auto
    branch = auto
[core]
    editor = vim
[alias]
    st = status
    co = checkout
    ci = commit
    br = branch
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s [%an] %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pull]
	rebase = false
[init]
	defaultBranch = main
